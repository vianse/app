<%= form_for(@noticia) do |f| %>
  <% if @noticia.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@noticia.errors.count, "error") %> prohibited this noticia from being saved:</h2>

      <ul>
      <% @noticia.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :titulo %><br>
    <%= f.text_field :titulo %>
  </div>
  <div class="field">
    <%= f.label :descripcion %><br>
    <%= f.text_area :descripcion %>
  </div>
  <div class="field">
    <%= f.label :estatus_id %><br>
    <%= f.collection_select :estatus_id, Estatus.order(:titulo), :id, :titulo, {:prompt=>"Selecciona un Estatus"}, {:class=>'form-control'} %>
  </div>
  <div class="field">
    <%= f.label :fecha %><br>
    <%= f.date_select :fecha %>
  </div>
  <div class="field">
    <%= f.label :categoria_id %><br>
    <%= f.collection_select :categoria_id, Categoria.order(:titulo), :id, :titulo, {:prompt=>"Selecciona una Categoria"}, {:class=>'form-control'} %>
  </div>
  <div class="field">
    <%= f.label :relevancia %><br>
    <%= f.text_field :relevancia %>
  </div>
  <div class="field">
    <%= f.label :agrupador_id %><br>
    <%= f.text_field :agrupador_id %>
    <%= f.collection_select :agrupador_id, Agrupadore.order(:titulo), :id, :titulo, {:prompt=>"Selecciona un Grupo"}, {:class=>'form-control'} %>
  </div>
  <div class="field">
    <%= f.label :idioma_id %><br>
    <%= f.collection_select :idioma_id, Idioma.order(:titulo), :id, :titulo, {:prompt=>"Selecciona un Idioma"}, {:class=>'form-control'} %>
  </div>
  <div class="field">
      <%= f.label :file,'Cover' %>
      <%= f.file_field :file %>
      </div>
  <div class="actions">
    <%= f.submit "Guardar" %>
  </div>
<% end %>
